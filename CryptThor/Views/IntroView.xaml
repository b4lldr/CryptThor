<UserControl x:Class="CryptThor.Views.IntroView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptThor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="660" d:DesignWidth="850">

    <Grid Style="{StaticResource IntroText}">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/bcg.png"/>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <TextBlock Text="{DynamicResource introTitle}" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
                <Border Padding="40,20" Margin="40,0,40,40" Background="#B2FFFFFF">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource introDescriptionGeneral}" />
                        <TextBlock Margin="0,0,0,20" FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" Text="{DynamicResource introSubtitle}"/>
                        <TextBlock Text="{DynamicResource introDescriptionEncryption}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
