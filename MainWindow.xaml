<Window x:Class="CryptThor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptThor"
        mc:Ignorable="d"
        Title="CryptThor" Height="700" Width="1050" MinHeight="500" MinWidth="900" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Icon="/Images/icon.png" StateChanged="Window_StateChanged">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"/>
    </WindowChrome.WindowChrome>

        <!--STYLES-->
    <Window.Resources>
        <!--ORIGIN BUTTON STYLE-->
        <Style TargetType="Button" x:Key="Base">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#16253D" BorderThickness="0">
                            <ContentPresenter x:Name="cp" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#002c54"/>
                                <Setter TargetName="cp" Property="TextBlock.Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFC39408"/>
                                <Setter TargetName="cp" Property="TextBlock.Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--TOP BUTTONS STYLE-->
        <Style TargetType="Grid" x:Key="Top">
            <Style.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource Base}">
                </Style>
            </Style.Resources>
        </Style>

        <!--NAV BUTTONS STYLE-->
        <Style TargetType="ScrollViewer" x:Key="Nav">
            <Style.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource Base}">
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Margin" Value="0,0,0,4"/>
                </Style>
            </Style.Resources>
        </Style>

        <!--TOP FONT STYLE-->
        <Style TargetType="fa:ImageAwesome">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="12"/>
        </Style>
    </Window.Resources>
        

    <!--|MAIN GRID|-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--LOGO & NAV-->
        <Grid Background="#30476d">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--LOGO-->
            <Grid Background="#30476d" WindowChrome.IsHitTestVisibleInChrome="True"> <!--Grid with bcg to make sure drag does not work here-->
                <Image Source="/Images/logo.png" Margin="10,10,10,30"/>
            </Grid>

            <!--NAV-->
            <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Row="1" Style="{StaticResource Nav}">
                <StackPanel>
                    <Button/>
                    <Button/>
                    <Button/>
                    <Button/>
                    <Button/>
                    <Button/>
                    <Button/>
                    <Button/>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--TOP & CONTENT-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--TOP-->
            <Grid x:Name="gridTop" Background="#16253d" Style="{StaticResource Top}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--LEFT-->
                <StackPanel Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button x:Name="btnHelp" Click="btnHelp_Click">
                        <fa:ImageAwesome Icon="Question"/>
                    </Button>
                    <Button x:Name="btnSett" Click="btnSett_Click">
                        <fa:ImageAwesome Icon="Cog"/>
                    </Button>
                </StackPanel>

                <!--RIGHT-->
                <StackPanel Orientation="Horizontal" Grid.Column="2" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button x:Name="btnMin" Click="btnMin_Click">
                        <fa:ImageAwesome Icon="WindowMinimize" Margin="12,23,12,12"/>
                    </Button>
                    <Button x:Name="btnMax" Click="btnMax_Click">
                        <fa:ImageAwesome x:Name="imgMax" Icon="WindowMaximize"/>
                    </Button>
                    <Button x:Name="btnClose" Click="btnClose_Click">
                        <fa:ImageAwesome Icon="Close"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!--CONTENT-->
            <Grid Grid.Row="1">
                <Grid.Background>
                    <ImageBrush ImageSource="/Images/bcg.png"/>
                </Grid.Background>
            </Grid>
        </Grid>
    </Grid>
</Window>